<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Streaming - Live Streaming App</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0f172a;
            color: #e2e8f0;
        }
        
        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: #1e293b;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: #64748b;
        }
    </style>
</head>
<body class="min-h-screen">
    <!-- Header -->
    <header class="bg-slate-800 shadow-lg">
        <div class="container mx-auto px-4 py-3">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <!-- Logo dan Navigasi -->
                <div class="flex items-center gap-6">
                    <a href="/" class="text-2xl font-bold text-blue-500">
                        <i class="fas fa-video mr-2"></i>LiveStream
                    </a>
                    <nav class="flex gap-4">
                        <a href="/live" class="text-white font-semibold">
                            <i class="fas fa-broadcast-tower mr-1"></i>Live Streaming
                        </a>
                        <a href="/download" class="text-gray-300 hover:text-white transition-colors">
                            <i class="fas fa-download mr-1"></i>Download Video
                        </a>
                    </nav>
                </div>

                <!-- System Metrics -->
                <div class="flex gap-4 text-sm bg-slate-900 p-2 rounded-lg">
                    <div class="flex items-center" title="CPU Usage">
                        <i class="fas fa-microchip text-blue-400 mr-2"></i>
                        <span id="cpuUsage">0%</span>
                    </div>
                    <div class="flex items-center" title="Memory Usage">
                        <i class="fas fa-memory text-green-400 mr-2"></i>
                        <span id="memoryUsage">0%</span>
                    </div>
                    <div class="flex items-center" title="Disk Usage">
                        <i class="fas fa-hdd text-purple-400 mr-2"></i>
                        <span id="diskUsage">0%</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <div class="space-y-6">
    <!-- Form Live Streaming -->
    <div class="bg-slate-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Konfigurasi Live Streaming</h2>
        <form id="streamForm" class="space-y-4">
            <!-- Platform -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Platform</label>
                    <div class="flex gap-4">
                        <label class="flex items-center">
                            <input type="radio" name="platform" value="facebook" class="form-radio text-blue-500" required>
                            <span class="ml-2"><i class="fab fa-facebook text-blue-500"></i> Facebook</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="platform" value="youtube" class="form-radio text-red-500" required>
                            <span class="ml-2"><i class="fab fa-youtube text-red-500"></i> YouTube</span>
                        </label>
                    </div>
                </div>

                <!-- Stream Key -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Stream Key</label>
                    <input type="password" name="streamKey" autocomplete="off" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
            </div>

            <!-- Video Selection -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Pilih Video</label>
                <select name="videoPath" autocomplete="off" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Pilih video...</option>
                    <% videos.forEach(function(video) { %>
                        <option value="<%= video.path %>"><%= video.name %> (<%= video.size %>)</option>
                    <% }); %>
                </select>
            </div>

            <!-- Platform Info -->
            <div>
                <p class="text-sm text-gray-400 mt-1">
                    <i class="fas fa-info-circle mr-1"></i>
                    Streaming akan menggunakan FFmpeg tanpa encoding untuk performa optimal
                </p>
            </div>

            <!-- Schedule & Duration -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Jadwal Streaming (Opsional)</label>
                    <input type="datetime-local" name="scheduleTime" autocomplete="off" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Durasi (Menit, Opsional)</label>
                    <input type="number" name="duration" min="1" autocomplete="off" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Kosongkan untuk streaming loop">
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition-colors">
                    <i class="fas fa-play mr-2"></i>Mulai Streaming
                </button>
            </div>
        </form>
    </div>

    <!-- Active Streams -->
    <div class="bg-slate-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Streaming Aktif</h2>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left border-b border-slate-700">
                        <th class="pb-3 pr-4">Video</th>
                        <th class="pb-3 pr-4">Platform</th>
                        <th class="pb-3 pr-4">Waktu Mulai</th>
                        <th class="pb-3 pr-4">Durasi</th>
                        <th class="pb-3">Aksi</th>
                    </tr>
                </thead>
                <tbody id="activeStreamsTable">
                    <% if (activeStreams.length === 0) { %>
                        <tr>
                            <td colspan="5" class="py-4 text-center text-gray-400">Tidak ada streaming aktif</td>
                        </tr>
                    <% } else { %>
                        <% activeStreams.forEach(function(stream) { %>
                            <tr class="border-b border-slate-700">
                                <td class="py-3 pr-4"><%= stream.videoPath.split('/').pop() %></td>
                                <td class="py-3 pr-4">
                                    <% if (stream.platform === 'facebook') { %>
                                        <i class="fab fa-facebook text-blue-500"></i>
                                    <% } else { %>
                                        <i class="fab fa-youtube text-red-500"></i>
                                    <% } %>
                                    <%= stream.platform %>
                                </td>
                                <td class="py-3 pr-4"><%= moment(stream.startTime).format('DD/MM/YYYY HH:mm:ss') %></td>
                                <td class="py-3 pr-4"><%= stream.duration ? stream.duration + ' menit' : 'Loop' %></td>
                                <td class="py-3">
                                    <button onclick="stopStream('<%= stream.streamId %>')" 
                                            class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded transition-colors">
                                        <i class="fas fa-stop mr-1"></i>Stop
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Scheduled Streams -->
    <div class="bg-slate-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Streaming Terjadwal</h2>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left border-b border-slate-700">
                        <th class="pb-3 pr-4">Video</th>
                        <th class="pb-3 pr-4">Platform</th>
                        <th class="pb-3 pr-4">Jadwal</th>
                        <th class="pb-3">Aksi</th>
                    </tr>
                </thead>
                <tbody id="scheduledStreamsTable">
                    <% if (scheduledStreams.length === 0) { %>
                        <tr>
                            <td colspan="4" class="py-4 text-center text-gray-400">Tidak ada streaming terjadwal</td>
                        </tr>
                    <% } else { %>
                        <% scheduledStreams.forEach(function(stream) { %>
                            <tr class="border-b border-slate-700">
                                <td class="py-3 pr-4"><%= stream.videoPath.split('/').pop() %></td>
                                <td class="py-3 pr-4">
                                    <% if (stream.platform === 'facebook') { %>
                                        <i class="fab fa-facebook text-blue-500"></i>
                                    <% } else { %>
                                        <i class="fab fa-youtube text-red-500"></i>
                                    <% } %>
                                    <%= stream.platform %>
                                </td>
                                <td class="py-3 pr-4"><%= moment(stream.scheduledTime).format('DD/MM/YYYY HH:mm:ss') %></td>
                                <td class="py-3">
                                    <button onclick="cancelScheduledStream('<%= stream.streamId %>')"
                                            class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded transition-colors">
                                        <i class="fas fa-times mr-1"></i>Batal
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
document.getElementById('streamForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());
    
    try {
        const response = await fetch('/live/start', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.status === 'success') {
            location.reload();
        } else {
            alert(result.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat memulai streaming');
    }
});

async function stopStream(streamId) {
    if (!confirm('Yakin ingin menghentikan streaming ini?')) return;
    
    try {
        const response = await fetch('/live/stop', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ streamId })
        });
        
        const result = await response.json();
        
        if (result.status === 'success') {
            location.reload();
        } else {
            alert(result.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat menghentikan streaming');
    }
}

async function cancelScheduledStream(streamId) {
    if (!confirm('Yakin ingin membatalkan streaming terjadwal ini?')) return;
    
    try {
        const response = await fetch('/live/stop', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ streamId })
        });
        
        const result = await response.json();
        
        if (result.status === 'success') {
            location.reload();
        } else {
            alert(result.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat membatalkan streaming');
    }
}
</script>
<script src="/js/live-streaming.js"></script>
