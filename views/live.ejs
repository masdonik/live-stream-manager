<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <!-- Header -->
    <header class="bg-gray-800 shadow-lg">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <i class="fas fa-video text-blue-500"></i>
                <h1 class="text-xl font-bold">LiveStream</h1>
            </div>
            <div class="flex items-center space-x-4">
                <span title="CPU Usage" class="flex items-center">
                    <i class="fas fa-microchip mr-2"></i>
                    <span id="cpuUsage">0</span>%
                </span>
                <span title="Memory Usage" class="flex items-center">
                    <i class="fas fa-memory mr-2"></i>
                    <span id="memoryUsage">0</span>%
                </span>
                <span title="Disk Usage" class="flex items-center">
                    <i class="fas fa-hdd mr-2"></i>
                    <span id="diskUsage">0</span>%
                </span>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <!-- Konfigurasi Live Streaming -->
        <div class="bg-gray-800 rounded-lg p-6 mb-8">
            <h2 class="text-xl font-semibold mb-6">Konfigurasi Live Streaming</h2>
            
            <form id="streamForm" class="space-y-6">
                <!-- Platform -->
                <div>
                    <label class="block mb-2">Platform</label>
                    <div class="flex space-x-4">
                        <label class="inline-flex items-center">
                            <input type="radio" name="platform" value="facebook" class="form-radio text-blue-500" required>
                            <span class="ml-2"><i class="fab fa-facebook text-blue-500"></i> Facebook</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="radio" name="platform" value="youtube" class="form-radio text-red-500" required>
                            <span class="ml-2"><i class="fab fa-youtube text-red-500"></i> YouTube</span>
                        </label>
                    </div>
                </div>

                <!-- Stream Key -->
                <div>
                    <label class="block mb-2">Stream Key</label>
                    <input type="password" name="streamKey" class="w-full bg-gray-700 rounded px-3 py-2 text-white" required>
                </div>

                <!-- Video Selection -->
                <div>
                    <label class="block mb-2">Pilih Video</label>
                    <select name="videoPath" class="w-full bg-gray-700 rounded px-3 py-2 text-white" required>
                        <option value="">Pilih video...</option>
                        <% videos.forEach(function(video) { %>
                            <option value="<%= video.path %>"><%= video.name %> (<%= video.size %>)</option>
                        <% }); %>
                    </select>
                </div>

                <!-- Info -->
                <div class="bg-gray-700 rounded p-4 text-sm">
                    <i class="fas fa-info-circle text-blue-400 mr-2"></i>
                    Streaming akan menggunakan FFmpeg tanpa encoding untuk performa optimal
                </div>

                <!-- Optional Settings -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block mb-2">Jadwal Streaming (Opsional)</label>
                        <input type="datetime-local" name="scheduleTime" class="w-full bg-gray-700 rounded px-3 py-2 text-white">
                    </div>
                    <div>
                        <label class="block mb-2">Durasi (Menit, Opsional)</label>
                        <input type="number" name="duration" placeholder="Kosongkan untuk streaming loop" class="w-full bg-gray-700 rounded px-3 py-2 text-white">
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg flex items-center justify-center">
                        <i class="fas fa-play mr-2"></i>
                        Mulai Streaming
                    </button>
                </div>
            </form>
        </div>

        <!-- Streaming Aktif -->
        <div class="bg-gray-800 rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-6">Streaming Aktif</h2>
            
            <% if (activeStreams.length === 0) { %>
                <p class="text-gray-400">Tidak ada streaming yang sedang berlangsung</p>
            <% } else { %>
                <div class="space-y-4">
                    <% activeStreams.forEach(function(stream) { %>
                        <div class="bg-gray-700 rounded-lg p-4 flex items-center justify-between">
                            <div>
                                <h3 class="font-semibold">
                                    <%= stream.platform === 'facebook' ? 'Facebook Live' : 'YouTube Live' %>
                                </h3>
                                <p class="text-sm text-gray-400">
                                    Video: <%= stream.videoPath.split('/').pop() %>
                                </p>
                            </div>
                            <button onclick="stopStream('<%= stream.id %>')" 
                                    class="bg-red-500 hover:bg-red-600 rounded px-4 py-2 flex items-center">
                                <i class="fas fa-stop mr-2"></i>
                                Stop
                            </button>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </main>

    <script src="/js/live-streaming.js"></script>
</body>
</html>
